@model ZooManager.Models.Category
@{
    ViewData["Title"] = "Category Details";
}

<h1>Category Details</h1>
<hr />

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
</dl>

<h5 class="mt-4">Animals in this category</h5>

@if (Model.Animals == null || !Model.Animals.Any())
{
    <p class="text-muted">No animals linked to this category.</p>
}
else
{
    <table class="table table-sm table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Species</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var a in Model.Animals)
        {
            <tr>
                <td>@a.Name</td>
                <td>@a.Species</td>
            </tr>
        }
        </tbody>
    </table>
}

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>