@model ZooManager.ViewModels.CategoryDetailsVm

<h1>Category Details</h1>

<div class="mb-3">
    <strong>Name:</strong> @Model.Category.Name
</div>

<hr />

<h3>Assign animal to this category</h3>

<form asp-action="AssignAnimal" method="post" class="row g-2 mb-3">
    @Html.AntiForgeryToken()
    <input type="hidden" name="categoryId" value="@Model.Category.Id" />

    <div class="col">
        <select class="form-select" name="selectedAnimalId" asp-items="Model.AssignableAnimals"></select>
    </div>

    <div class="col">
        <button class="btn btn-primary" type="submit">Assign</button>
    </div>
</form>

<h3>Animals in this category</h3>

@if (!Model.AnimalsInCategory.Any())
{
    <div class="alert alert-info">No animals assigned.</div>
}
else
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Species</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var a in Model.AnimalsInCategory)
        {
            <tr>
                <td>@a.Name</td>
                <td>@a.Species</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary"
                       asp-controller="Animals"
                       asp-action="Details"
                       asp-route-id="@a.Id">Animal details</a>

                    <form asp-action="UnassignAnimal" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="categoryId" value="@Model.Category.Id" />
                        <input type="hidden" name="animalId" value="@a.Id" />
                        <button class="btn btn-sm btn-outline-danger" type="submit">Unassign</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

<a class="btn btn-secondary" asp-action="Index">Back</a>
<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Category.Id">Edit</a>
