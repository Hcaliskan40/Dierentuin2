@model ZooManager.ViewModels.EnclosureEditVm
@using ZooManager.Models

<h1>Edit Enclosure</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Climate" class="form-label"></label>
        <select asp-for="Climate" class="form-select" asp-items="Html.GetEnumSelectList<Climate>()"></select>
    </div>

    <div class="mb-3">
        <label asp-for="HabitatType" class="form-label"></label>
        @{
            var habitatItems = Enum.GetValues(typeof(HabitatType))
                .Cast<HabitatType>()
                .Select(v => new SelectListItem(v.ToString(), v.ToString()))
                .ToList();
        }

        <select asp-for="HabitatType" class="form-select" asp-items="habitatItems"></select>
    </div>

    <div class="mb-3">
        <label asp-for="SecurityLevel" class="form-label"></label>
        <select asp-for="SecurityLevel" class="form-select" asp-items="Html.GetEnumSelectList<SecurityLevel>()"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Size" class="form-label"></label>
        <input asp-for="Size" class="form-control" />
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}