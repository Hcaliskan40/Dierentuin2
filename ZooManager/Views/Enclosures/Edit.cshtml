@model ZooManager.Models.Enclosure
@{
    ViewData["Title"] = "Edit Enclosure";
    var allHabitats = Enum.GetValues(typeof(ZooManager.Models.HabitatType)).Cast<ZooManager.Models.HabitatType>()
        .Where(h => h != 0).ToList();
}

<h1>Edit Enclosure</h1>
<hr />

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Climate</label>
        <select class="form-select" asp-for="Climate" asp-items="ViewBag.Climates"></select>
    </div>

    <div class="mb-3">
        <label class="form-label">HabitatType (multiple)</label>
        <div class="d-flex flex-wrap gap-3">
            @foreach (var h in allHabitats)
            {
                var isChecked = Model.HabitatType.HasFlag(h);
                <label class="form-check">
                    <input class="form-check-input" type="checkbox" name="selectedHabitats" value="@h" @(isChecked ? "checked" : "") />
                    <span class="form-check-label">@h</span>
                </label>
            }
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">SecurityLevel</label>
        <select class="form-select" asp-for="SecurityLevel" asp-items="ViewBag.SecurityLevels"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Size" class="form-label"></label>
        <input asp-for="Size" class="form-control" />
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}