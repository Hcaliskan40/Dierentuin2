@model ZooManager.Models.Enclosure

<h1>Enclosure Details</h1>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Climate</dt>
    <dd class="col-sm-10">@Model.Climate</dd>

    <dt class="col-sm-2">Habitat</dt>
    <dd class="col-sm-10">@Model.HabitatType</dd>

    <dt class="col-sm-2">Security</dt>
    <dd class="col-sm-10">@Model.SecurityLevel</dd>

    <dt class="col-sm-2">Size</dt>
    <dd class="col-sm-10">@Model.Size</dd>
</dl>

<h4>Animals in this enclosure</h4>
@if (Model.Animals == null || !Model.Animals.Any())
{
    <p><em>No animals assigned.</em></p>
}
else
{
    <ul>
        @foreach (var a in Model.Animals.OrderBy(a => a.Name))
        {
            <li>
                @a.Name (@a.Species) — Category: @(a.Category?.Name ?? "None")
                (<a asp-controller="Animals" asp-action="Details" asp-route-id="@a.Id">open</a>)
            </li>
        }
    </ul>
}

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>