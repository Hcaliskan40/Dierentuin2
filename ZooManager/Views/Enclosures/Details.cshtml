@model ZooManager.Models.Enclosure
@{
    ViewData["Title"] = "Enclosure Details";
}

<h1>Enclosure Details</h1>
<hr />

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Climate</dt>
    <dd class="col-sm-10">@Model.Climate</dd>

    <dt class="col-sm-2">HabitatType</dt>
    <dd class="col-sm-10">@Model.HabitatType</dd>

    <dt class="col-sm-2">SecurityLevel</dt>
    <dd class="col-sm-10">@Model.SecurityLevel</dd>

    <dt class="col-sm-2">Size (m²)</dt>
    <dd class="col-sm-10">@Model.Size</dd>
</dl>

<h5 class="mt-4">Animals in this enclosure</h5>

@if (Model.Animals == null || !Model.Animals.Any())
{
    <p class="text-muted">No animals linked to this enclosure.</p>
}
else
{
    <table class="table table-sm table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Species</th>
            <th>Diet</th>
            <th>Size</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var a in Model.Animals)
        {
            <tr>
                <td>@a.Name</td>
                <td>@a.Species</td>
                <td>@a.DietaryClass</td>
                <td>@a.Size</td>
            </tr>
        }
        </tbody>
    </table>
}

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>