@model IEnumerable<ZooManager.Models.Enclosure>
@{
    ViewData["Title"] = "Enclosures";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="m-0">Enclosures</h1>
    <a class="btn btn-primary" asp-action="Create">+ Create Enclosure</a>
</div>

<table class="table table-striped align-middle">
    <thead>
    <tr>
        <th>Name</th>
        <th>Climate</th>
        <th>Habitat</th>
        <th>Security</th>
        <th>Size (m²)</th>
        <th style="width: 220px;" class="text-end">Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var e in Model)
    {
        <tr>
            <td>@e.Name</td>
            <td>@e.Climate</td>
            <td>@e.HabitatType</td>
            <td>@e.SecurityLevel</td>
            <td>@e.Size</td>
            <td class="text-end">
                <a class="btn btn-outline-secondary btn-sm" asp-action="Details" asp-route-id="@e.Id">Details</a>
                <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@e.Id">Edit</a>
                <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@e.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>