@model IEnumerable<ZooManager.Models.Enclosure>

<h1>Enclosures</h1>

<form method="get" class="row g-2 mb-3">
    <div class="col">
        <input name="name" value="@ViewBag.Name" class="form-control" placeholder="Filter by name..." />
    </div>
    <div class="col">
        <button class="btn btn-primary">Filter</button>
        <a asp-action="Index" class="btn btn-secondary">Reset</a>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Create new</a>
</p>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Climate</th>
        <th>Habitat</th>
        <th>Security</th>
        <th>Size</th>
        <th>#Animals</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var e in Model)
    {
        <tr>
            <td>@e.Name</td>
            <td>@e.Climate</td>
            <td>@e.HabitatType</td>
            <td>@e.SecurityLevel</td>
            <td>@e.Size</td>
            <td>@(e.Animals?.Count ?? 0)</td>
            <td>
                <a asp-action="Details" asp-route-id="@e.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@e.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@e.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>