@model ZooManager.Models.Animal

<h1>Animal Details</h1>

<div class="mb-3">
    <strong>Name:</strong> @Model.Name <br />
    <strong>Species:</strong> @Model.Species <br />
    <strong>Category:</strong> @(Model.Category?.Name ?? "None") <br />
    <strong>Enclosure:</strong> @(Model.Enclosure?.Name ?? "None") <br />
</div>

<hr />

<h3>Actions</h3>

<div class="d-flex gap-2 flex-wrap mb-3">
    <form asp-action="Sunrise" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button class="btn btn-warning" type="submit">Sunrise</button>
    </form>

    <form asp-action="Sunset" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button class="btn btn-dark" type="submit">Sunset</button>
    </form>

    <form asp-action="FeedingTime" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button class="btn btn-success" type="submit">Feeding time</button>
    </form>

    <form asp-action="CheckConstraints" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button class="btn btn-primary" type="submit">CheckConstraints</button>
    </form>
</div>

@if (TempData["ActionResult"] != null)
{
    <div class="alert alert-info">
        <strong>@TempData["ActionTitle"]</strong>
        <pre style="margin:0; white-space:pre-wrap;">@TempData["ActionResult"]</pre>
    </div>
}

<a class="btn btn-secondary" asp-action="Index">Back</a>