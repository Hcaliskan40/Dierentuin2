@model ZooManager.Models.Animal
@{
    ViewData["Title"] = "Create Animal";
}

<h1>Create Animal</h1>
<hr/>

<form asp-action="Create" method="post" class="row g-3">
    <div class="col-md-6">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Species" class="form-label"></label>
        <input asp-for="Species" class="form-control"/>
        <span asp-validation-for="Species" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Size" class="form-label"></label>
        <select asp-for="Size" class="form-select" asp-items="Html.GetEnumSelectList<Size>()"></select>
    </div>

    <div class="col-md-4">
        <label asp-for="DietaryClass" class="form-label"></label>
        <select asp-for="DietaryClass" class="form-select" asp-items="Html.GetEnumSelectList<DietaryClass>()"></select>
    </div>

    <div class="col-md-4">
        <label asp-for="ActivityPattern" class="form-label"></label>
        <select asp-for="ActivityPattern" class="form-select" asp-items="Html.GetEnumSelectList<ActivityPattern>()"></select>
    </div>

    <div class="col-md-4">
        <label asp-for="SecurityRequirement" class="form-label"></label>
        <select asp-for="SecurityRequirement" class="form-select" asp-items="Html.GetEnumSelectList<SecurityLevel>()"></select>
    </div>

    <div class="col-md-4">
        <label asp-for="SpaceRequirement" class="form-label"></label>
        <input asp-for="SpaceRequirement" class="form-control" />
        <span asp-validation-for="SpaceRequirement" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label class="form-label">Category</label>
        <select class="form-select" asp-for="CategoryId" asp-items="ViewBag.Categories">
            <option value="">(None)</option>
        </select>
    </div>

    <div class="col-md-6">
        <label class="form-label">Enclosure</label>
        <select class="form-select" asp-for="EnclosureId" asp-items="ViewBag.Enclosures">
            <option value="">(None)</option>
        </select>
    </div>

    <div class="col-md-6">
        <label class="form-label">Prey</label>
        <select class="form-select" asp-for="PreyId" asp-items="ViewBag.Animals">
            <option value="">(None)</option>
        </select>
    </div>

    <div class="col-12 d-flex gap-2">
        <button class="btn btn-primary" type="submit">Create</button>
        <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
