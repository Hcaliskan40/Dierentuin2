@model ZooManager.ViewModels.AnimalEditVm

<h1>Create Animal</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Species" class="form-label"></label>
        <input asp-for="Species" class="form-control" />
        <span asp-validation-for="Species" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Size" class="form-label"></label>
        <select asp-for="Size" class="form-select" asp-items="Html.GetEnumSelectList<ZooManager.Models.Size>()"></select>
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DietaryClass" class="form-label"></label>
        <select asp-for="DietaryClass" class="form-select" asp-items="Html.GetEnumSelectList<ZooManager.Models.DietaryClass>()"></select>
        <span asp-validation-for="DietaryClass" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ActivityPattern" class="form-label"></label>
        <select asp-for="ActivityPattern" class="form-select" asp-items="Html.GetEnumSelectList<ZooManager.Models.ActivityPattern>()"></select>
        <span asp-validation-for="ActivityPattern" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SpaceRequirement" class="form-label"></label>
        <input asp-for="SpaceRequirement" class="form-control" />
        <span asp-validation-for="SpaceRequirement" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SecurityRequirement" class="form-label"></label>
        <select asp-for="SecurityRequirement" class="form-select" asp-items="Html.GetEnumSelectList<ZooManager.Models.SecurityLevel>()"></select>
        <span asp-validation-for="SecurityRequirement" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Category</label>
        <select asp-for="CategoryId" class="form-select" asp-items="Model.CategoryOptions"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Enclosure</label>
        <select asp-for="EnclosureId" class="form-select" asp-items="Model.EnclosureOptions"></select>
        <span asp-validation-for="EnclosureId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Prey</label>
        <select asp-for="PreyId" class="form-select" asp-items="Model.PreyOptions"></select>
        <span asp-validation-for="PreyId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
