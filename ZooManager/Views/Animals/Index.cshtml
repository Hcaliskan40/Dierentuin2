@model IEnumerable<ZooManager.Models.Animal>
@{
ViewData["Title"] = "Animals";
}

<div class="d-flex align-items-center justify-content-between mb-3">
  <h1 class="mb-0">Animals</h1>
  <a class="btn btn-primary" asp-action="Create">+ Create Animal</a>
</div>

<table class="table table-striped table-hover align-middle">
  <thead>
  <tr>
    <th>Name</th>
    <th>Species</th>
    <th>Diet</th>
    <th>Size</th>
    <th>Category</th>
    <th>Enclosure</th>
    <th class="text-end">Actions</th>
  </tr>
  </thead>
  <tbody>
  @foreach (var a in Model)
  {
  <tr>
    <td>@a.Name</td>
    <td>@a.Species</td>
    <td>@a.DietaryClass</td>
    <td>@a.Size</td>
    <td>@(a.Category?.Name ?? "-")</td>
    <td>@(a.Enclosure?.Name ?? "-")</td>
    <td class="text-end">
      <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@a.Id">Details</a>
      <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@a.Id">Edit</a>
      <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@a.Id">Delete</a>
    </td>
  </tr>
  }
  </tbody>
</table>
