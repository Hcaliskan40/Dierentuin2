@model ZooManager.Models.Animal
@{
    ViewData["Title"] = "Animal Details";
}

<h1>Animal Details</h1>
<hr/>

<dl class="row">
    <dt class="col-sm-3">Name</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">Species</dt>
    <dd class="col-sm-9">@Model.Species</dd>

    <dt class="col-sm-3">Size</dt>
    <dd class="col-sm-9">@Model.Size</dd>

    <dt class="col-sm-3">DietaryClass</dt>
    <dd class="col-sm-9">@Model.DietaryClass</dd>

    <dt class="col-sm-3">ActivityPattern</dt>
    <dd class="col-sm-9">@Model.ActivityPattern</dd>

    <dt class="col-sm-3">SpaceRequirement</dt>
    <dd class="col-sm-9">@Model.SpaceRequirement</dd>

    <dt class="col-sm-3">SecurityRequirement</dt>
    <dd class="col-sm-9">@Model.SecurityRequirement</dd>

    <dt class="col-sm-3">Category</dt>
    <dd class="col-sm-9">@(Model.Category?.Name ?? "-")</dd>

    <dt class="col-sm-3">Enclosure</dt>
    <dd class="col-sm-9">@(Model.Enclosure?.Name ?? "-")</dd>

    <dt class="col-sm-3">Prey</dt>
    <dd class="col-sm-9">@(Model.Prey?.Name ?? "-")</dd>
</dl>

<div class="d-flex gap-2">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
</div>